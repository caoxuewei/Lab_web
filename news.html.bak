  <style>
    /* 新闻动态页特有样式 */
    .page-header {
      background-color: var(--light-gray);
      padding: 120px 0 60px;
      text-align: center;
      position: relative;
    }

    .page-header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: url('images/news-bg.jpg');
      background-size: cover;
      background-position: center;
      opacity: 0.1;
      z-index: 1;
    }

    .page-header-content {
      position: relative;
      z-index: 2;
    }

    .page-header h1 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .page-header p {
      max-width: 800px;
      margin: 0 auto;
      color: var(--dark-gray);
    }

    .breadcrumb {
      list-style: none;
      display: flex;
      justify-content: center;
      padding: 0;
      margin: 2rem 0 0;
    }

    .breadcrumb li {
      display: flex;
      align-items: center;
    }

    .breadcrumb li:not(:last-child)::after {
      content: '\f054';
      font-family: 'Font Awesome 5 Free';
      font-weight: 900;
      margin: 0 10px;
      font-size: 0.8rem;
      color: var(--dark-gray);
    }

    .news-container {
      padding: 60px 0;
    }

    .news-grid {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 50px;
    }

    .featured-news {
      margin-bottom: 50px;
      position: relative;
    }

    .featured-news-image {
      width: 100%;
      height: 400px;
      overflow: hidden;
      border-radius: var(--card-radius);
      position: relative;
    }

    .featured-news-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }

    .featured-news:hover .featured-news-image img {
      transform: scale(1.05);
    }

    .featured-news-overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
      padding: 30px;
      border-radius: 0 0 var(--card-radius) var(--card-radius);
    }

    .featured-news-label {
      display: inline-block;
      background-color: var(--accent-color);
      color: white;
      padding: 5px 15px;
      border-radius: 20px;
      font-size: 0.8rem;
      margin-bottom: 15px;
    }

    .featured-news-title {
      color: white;
      font-size: 1.8rem;
      margin: 0 0 15px;
    }

    .featured-news-meta {
      display: flex;
      gap: 20px;
      color: rgba(255, 255, 255, 0.8);
      font-size: 0.9rem;
    }

    .featured-news-meta span {
      display: flex;
      align-items: center;
    }

    .featured-news-meta i {
      margin-right: 5px;
    }

    .news-list {
      display: grid;
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .news-card {
      display: grid;
      grid-template-columns: 1fr 2fr;
      gap: 20px;
      background-color: white;
      border-radius: var(--card-radius);
      overflow: hidden;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .news-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .news-card-image {
      width: 100%;
      height: 100%;
      min-height: 180px;
      overflow: hidden;
    }

    .news-card-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
    }

    .news-card:hover .news-card-image img {
      transform: scale(1.1);
    }

    .news-card-content {
      padding: 20px 20px 20px 0;
    }

    .news-card-category {
      display: inline-block;
      background-color: rgba(var(--primary-rgb), 0.1);
      color: var(--primary-color);
      padding: 3px 12px;
      border-radius: 20px;
      font-size: 0.8rem;
      margin-bottom: 10px;
    }

    .news-card-title {
      font-size: 1.2rem;
      margin: 0 0 10px;
    }

    .news-card-title a {
      color: var(--dark-color);
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .news-card-title a:hover {
      color: var(--primary-color);
    }

    .news-card-excerpt {
      color: var(--dark-gray);
      font-size: 0.9rem;
      line-height: 1.6;
      margin-bottom: 15px;
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .news-card-meta {
      display: flex;
      gap: 15px;
      color: var(--dark-gray);
      font-size: 0.8rem;
    }

    .news-card-meta span {
      display: flex;
      align-items: center;
    }

    .news-card-meta i {
      margin-right: 5px;
    }

    .sidebar {
      position: sticky;
      top: 100px;
    }

    .sidebar-widget {
      background-color: white;
      border-radius: var(--card-radius);
      padding: 25px;
      margin-bottom: 30px;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    }

    .sidebar-widget h3 {
      margin: 0 0 20px;
      padding-bottom: 15px;
      border-bottom: 1px solid var(--light-gray);
      font-size: 1.2rem;
    }

    .sidebar-categories ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .sidebar-categories li {
      margin-bottom: 10px;
    }

    .sidebar-categories li:last-child {
      margin-bottom: 0;
    }

    .sidebar-categories a {
      display: flex;
      justify-content: space-between;
      align-items: center;
      color: var(--dark-gray);
      text-decoration: none;
      padding: 8px 15px;
      border-radius: var(--button-radius);
      transition: all 0.3s ease;
    }

    .sidebar-categories a:hover {
      background-color: var(--light-gray);
      color: var(--primary-color);
    }

    .sidebar-categories .cat-count {
      background-color: var(--light-gray);
      color: var(--dark-gray);
      padding: 2px 8px;
      border-radius: 20px;
      font-size: 0.8rem;
    }

    .recent-news-item {
      display: flex;
      gap: 15px;
      margin-bottom: 15px;
      padding-bottom: 15px;
      border-bottom: 1px solid var(--light-gray);
    }

    .recent-news-item:last-child {
      margin-bottom: 0;
      padding-bottom: 0;
      border-bottom: none;
    }

    .recent-news-thumb {
      flex: 0 0 70px;
      height: 70px;
      border-radius: 10px;
      overflow: hidden;
    }

    .recent-news-thumb img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .recent-news-info {
      flex: 1;
    }

    .recent-news-title {
      font-size: 1rem;
      margin: 0 0 5px;
      font-weight: 500;
    }

    .recent-news-title a {
      color: var(--dark-color);
      text-decoration: none;
      transition: color 0.3s ease;
    }

    .recent-news-title a:hover {
      color: var(--primary-color);
    }

    .recent-news-date {
      font-size: 0.8rem;
      color: var(--dark-gray);
      display: flex;
      align-items: center;
    }

    .recent-news-date i {
      margin-right: 5px;
    }

    .sidebar-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }

    .sidebar-tag {
      display: inline-block;
      padding: 5px 15px;
      background-color: var(--light-gray);
      border-radius: 20px;
      font-size: 0.85rem;
      color: var(--dark-gray);
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .sidebar-tag:hover {
      background-color: var(--primary-color);
      color: white;
    }

    .pagination {
      display: flex;
      justify-content: center;
      margin-top: 50px;
    }

    .pagination-button {
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 5px;
      border-radius: 50%;
      background-color: var(--light-gray);
      color: var(--dark-gray);
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .pagination-button:hover,
    .pagination-button.active {
      background-color: var(--primary-color);
      color: white;
    }

    @media (max-width: 992px) {
      .news-grid {
        grid-template-columns: 1fr;
      }

      .sidebar {
        position: static;
      }
    }

    @media (max-width: 768px) {
      .news-card {
        grid-template-columns: 1fr;
      }

      .news-card-image {
        height: 200px;
      }

      .news-card-content {
        padding: 20px;
      }

      .featured-news-image {
        height: 300px;
      }

      .featured-news-title {
        font-size: 1.5rem;
      }
    }
